generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Todo {
  id         Int      @id @default(autoincrement())
  uuid       String   @unique @default(uuid())
  content    String
  completed  Boolean  @default(false)
  user_uuid  String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("todos")
} 